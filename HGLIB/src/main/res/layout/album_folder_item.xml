<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/album_item_select_bg"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/rl_first_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/first_image"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:background="@drawable/album_num_oval"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/rl_first_image"
        android:textColor="#4d4d4d"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/image_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/tv_folder_name"
        android:textColor="#4d4d4d"
        android:textSize="14sp" />
</RelativeLayout>