<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@xml/dialog_load_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dlg_recorder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/audio_recorder_icon"
            android:contentDescription="@string/desc"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/dlg_recorder_voice"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/audio_v1"
            android:visibility="visible"
            android:contentDescription="@string/desc" />
    </LinearLayout>

    <TextView
        android:id="@+id/dlg_recorder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/str_recorder_label"
        android:textColor="#FFFFFF" />
</LinearLayout>